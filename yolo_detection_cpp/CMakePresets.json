{
  "version": 6,
  "configurePresets": [
    {
      "name": "system-deps",
      "description": "Build using system-installed Debian packages (no vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug",
      "inherits": "system-deps",
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "system-deps"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "tests",
      "configurePreset": "system-deps",
      "targets": ["detection_tests"]
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "configurePreset": "system-deps",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
